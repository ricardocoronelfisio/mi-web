    <script>
        gsap.registerPlugin(ScrollTrigger);

        // Performance: Create particle system dynamically for futuristic background (limited for perf)
        const particlesContainer = document.getElementById('particles');
        for (let i = 0; i < 50; i++) { // Limit to 50 for performance
            const particle = document.createElement('div');
            particle.className = 'particle';
            particle.style.width = Math.random() * 4 + 2 + 'px';
            particle.style.height = particle.style.width;
            particle.style.left = Math.random() * 100 + '%';
            particle.style.top = Math.random() * 100 + '%';
            particlesContainer.appendChild(particle);

            // Animate particles with GSAP for floating effect
            gsap.to(particle, {
                y: -100,
                x: Math.random() * 200 - 100,
                opacity: 0,
                duration: Math.random() * 10 + 5,
                ease: "none",
                repeat: -1,
                delay: Math.random() * 5
            });
        }

        // Hero parallax effects: Enhanced with more layers and smoother scrub
        gsap.to('.hero::before', {
            y: -300, // Deeper parallax
            ease: "none",
            scrollTrigger: {
                trigger: ".hero",
                start: "top top",
                end: "bottom top",
                scrub: 1.5 // Smoother scrub
            }
        });

        gsap.to('.hero h1', {
            y: -150,
            ease: "none",
            scrollTrigger: {
                trigger: ".hero",
                start: "top top",
                end: "bottom top",
                scrub: 1.5
            }
        });

        gsap.to('.hero p', {
            y: -75,
            ease: "none",
            scrollTrigger: {
                trigger: ".hero",
                start: "top top",
                end: "bottom top",
                scrub: 1.5
            }
        });

        gsap.to('.hero-buttons', {
            y: -50,
            ease: "none",
            scrollTrigger: {
                trigger: ".hero",
                start: "top top",
                end: "bottom top",
                scrub: 1.5
            }
        });

        // Additional parallax for image-break background
        gsap.to('.image-break', {
            backgroundPosition: '50% 100px', // Subtle background move
            ease: "none",
            scrollTrigger: {
                trigger: ".image-break",
                start: "top bottom",
                end: "bottom top",
                scrub: 1
            }
        });

        // Hero animations: Enhanced with typing effect simulation for futuristic feel
        const heroTl = gsap.timeline();
        heroTl.to('.hero::before', { scale: 1.1, opacity: 1, duration: 2, ease: "power4.inOut", repeat: -1, yoyo: true })
            .from('.hero h1', { textShadow: 'none', duration: 1.5
